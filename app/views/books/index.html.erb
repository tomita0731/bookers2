 <div class="col-md-3">
   <div class="row">
     <div class="col-md-3">
       <h2>User info</h2>
                 
         <% if @has_user_image %>
           <%= image_tag @user.user_image %>
         <% else %>
           <%= image_tag "default-image.jpg" %>
         <% end %>
             <table class="table">
               <tbody>
                 <tr>
                  <th>name <%= @user.name %></th>
                 </tr>
                 <tr>
                  <th>introduction <%= @user.introduction %></th>
                 </tr>
               </tbody>
             </table>
            <div class="row">
              <%= link_to edit_user_registration_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
               <i class="fa-solid fa-user-gear"></i>
               
            </div>
            
            <h2 class="mt-3">New book</h2>
           </div>
　　　 　<% end %>
　　　 　  
