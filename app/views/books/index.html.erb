<div class="container">
  <div class="row">
    <div class="col-md-3">
   
       <h2>User info</h2>
                 
         <% if @has_user_image %>
           <%= image_tag @user.user_image %>
         <% else %>
           <%= image_tag "default-image.jpg" %>
         <% end %>
             <table class="table">
               <tbody>
                 <tr>
                  <th>name</th>
                  <th> <%= @user.name %></th>
                 </tr>
                 <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                 </tr>
               </tbody>
             </table>
            <div class="row">
              <%= link_to edit_user_registration_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
               <i class="fa-solid fa-user-gear"></i>
              <% end %>
            </div>
            
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |f| %>
         <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :book_title %>
          </div>
         <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :book_body, class:"form-control" %>
         </div>
         <div class="form_group">
          <%= f.submit "Create Book", class:"btn btn-success" %>
         </div>
       <% end %>
      </div>
      <div class="col-md-8 ofset-md-1">
       <h2>Books</h2>
       <table class="table table-hover tavle-inverse">
        <thead>
         
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </thead>
        <tbody>
        
         <tr>
           <% @books.each do |book| %>
           <%= link_to book_path(book.id) do %>
            <td><%= image_tag book.user.get_profile_image %></td>
           <% end %>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          <% end %>
         </tr>
         </tbody>
       </table>
      </div>
       
  </div>
</div>