<p id="notice"></p>
<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h1>Editing Book</h1>
     <%= form_with model: @book , url: book_path(@book), method: :patch do |f| %>
         <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class:"form-control" %>
          </div>
         <div class="form-group">
          <label for="book_body">Opinion</label>
           <%= f.text_area :body, id:"book_body", class:"form-control" %>
         </div>
         <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
         </div>
       <% end %>
       <%= link_to "Show", book_path(@book) %>
       <%= "|" %>
       <%= link_to "Back", books_path(@book) %>
   </div>
 </div>
</div>